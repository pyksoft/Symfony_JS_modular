{
	"name" 	: "table",
	"desc"	: "Add all the table classes",
	"params": [
		{
			"name" : "$options",
			"type" : "map"
		},{
			"name"		: "table_class",
			"type"		: "string",
			"level"		: 2,
			"desc"		: "",
